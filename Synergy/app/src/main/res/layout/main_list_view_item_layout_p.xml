<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_list_view_item_layout_p_main_lnlay"
    android:gravity="center"
    android:layout_width="fill_parent"
    android:layout_height="96dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/main_list_view_item_layout_p_profile_pic_imgvw"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:layout_weight="1.5"
        android:src="@drawable/logo"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/>

    <LinearLayout
        android:id="@+id/main_list_view_item_layout_p_data_1_lnlay"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_weight="6">

        <TextView
            android:id="@+id/main_list_view_item_layout_p_title_txtvw"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="4dp"
            android:layout_gravity="left|center_vertical"
            android:text="@string/placeholder"
            android:textSize="18dp"
            />

        <LinearLayout
            android:id="@+id/main_list_view_item_layout_p_location_lnlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="18dp">

            <ub.edu.pis2017.pis_17.synergy.View.IconTextView
                android:id="@+id/main_list_view_item_layout_p_location_ictxtvw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="4dp"
                android:text="@string/icon_location"
                android:textSize="12dp"
                />

            <TextView
                android:id="@+id/main_list_view_item_layout_p_location_txtvw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/placeholder"
                android:textSize="12dp"
                android:autoSizeTextType="uniform"
                />

        </LinearLayout>


        <TextView
            android:id="@+id/main_list_view_item_layout_p_admin_txtvw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/placeholder"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="12dp"
            android:textSize="12dp"
            android:autoSizeTextType="uniform"
            />

        <TextView
            android:id="@+id/main_list_view_item_layout_p_vacants_txtvw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/placeholder"
            android:layout_marginLeft="12dp"
            android:textSize="12dp"
            android:autoSizeTextType="uniform"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/main_list_view_item_layout_p_arrow_imgvw"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_keyboard_arrow_right_2x"
        android:layout_weight="1"
        android:layout_gravity="right"
        />

</LinearLayout>

