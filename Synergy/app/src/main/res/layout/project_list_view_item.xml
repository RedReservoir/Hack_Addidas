<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/project_list_view_item_layout_main_lnlay"
    android:gravity="center"
    android:layout_width="fill_parent"
    android:layout_height="72dp"
    android:background="@color/colorBackgroundDark"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/project_list_view_item_layout_profile_pic_imgvw"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:layout_weight="1.5"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/logo"
        />

    <LinearLayout
        android:id="@+id/project_list_view_item_layout_data_1_lnlay"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_weight="6"
        android:layout_marginLeft="8dp">

        <TextView
            android:id="@+id/project_list_view_item_layout_username_txtvw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_gravity="left|top"
            android:layout_weight="1"
            android:text="@string/placeholder"
            android:textSize="18dp"
            />

        <TextView
            android:id="@+id/project_list_view_item_layout_position_name_txtvw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="left|bottom"
            android:layout_weight="1"
            android:text="@string/placeholder"
            android:textSize="12dp"
            />

    </LinearLayout>

</LinearLayout>

