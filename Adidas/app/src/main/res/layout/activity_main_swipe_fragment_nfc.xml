<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main_swipe_fragment_nfc_main_cnlay"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:backgroundTint="@color/colorBackground"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/activity_main_swipe_fragment_nfc_addidas_rllay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp">

        <ImageView
            android:id="@+id/activity_main_swipe_fragment_nfc_addidas_lines_imgvw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/addidas_lines"/>

        <ImageView
            android:id="@+id/activity_main_swipe_fragment_nfc_addidas_word_imgvw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/addidas_word"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/activity_main_swipe_fragment_nfc_imgvw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@drawable/ready_nfc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_swipe_fragment_nfc_addidas_rllay" />


</android.support.constraint.ConstraintLayout>

